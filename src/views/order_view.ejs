<%- include('partials/_header'); %>
<%- include('partials/_navbar'); %>
<header class="pt-10 bg-primary fixed-top" style="margin-top: 72px;">
  <div class="container-xl">
    <div class="row">
      <div class="col text-center">
        <a href="/" class="d-inline-flex font-bold text-white">
          <span>Home</span>
        </a>
      </div>
      <div class="col text-center" style="background-color: #ffffff; border-radius: 19px;">
        <a href="#" class="btn d-inline-flex font-bold">
          <span>Add Measurement</span>
        </a>
      </div>
    </div>
  </div>
  <div class="container-xl">
    <div class="row justify-content-center">
      <div class="col-6" style="position: relative;">
        <div class="text-center" style="position: absolute; bottom: -5px; left: 50%; transform: translateX(-50%);">
          <a class="d-block" href="/" role="button">
            <div class="avatar avatar-lg bg-primary rounded-circle text-white text-lg">
              <h2><i class="bi bi-house-fill text-white"></i></h2>
            </div>
          </a>
        </div>
      </div>
    </div>
  </div>
</header>
<main class="py-10" style="margin-top: 202px;">
  <div class="container-xl">
    <% if (data && data.length > 0) { %>
      <% data.forEach(order => { %>
        <div class="card shadow border-0 mt-4 mb-10">
          <div class="card-body">
            <div class="d-flex align-items-center">
              <div>
                <div class="d-flex align-items-center">
                  <div class="icon icon-shape bg-primary text-white text-lg rounded-circle">
                    <%= order.customer_name.charAt(0).toUpperCase() %>
                  </div>
                  <div class="ms-4">
                    <span class="h4 d-block mb-0"><%= order.customer_name %></span>
                    <span class="h5 d-block font-semibold text-muted"><%= order.address %></span>
                    <span class="text-sm font-semibold text-muted"><%= order.phone %></span>
                  </div>
                </div>
              </div>
              <div class="ms-auto">
                <a class="btn btn-sm btn-danger" href="/delete4/<%= order.order_id %>">
                  <i class="text-white bi bi-trash"></i>
                </a>
              </div>
            </div>
          </div>
        </div>
        <div class="card shadow border-0 mb-7">
          <div class="card-header bg-primary">
            <h5 class="mb-0 text-white">Order Details</h5>
            <div class="text-end">
              <a class="btn btn-sm btn-tertiary" href="/update4/<%= order.order_id %>">
                <i class="text-white bi bi-pencil"></i> 
              </a>
            </div>
          </div>
          <div class="table-responsive">
            <table class="table table-hover table-nowrap table-sm">
              <tbody>
                <tr>
                  <th scope="row">Customer ID</th>
                  <td><%= order.customer_id %></td>
                </tr>
                <tr>
                  <th scope="row">Dress Type:</th>
                  <td><%= order.dress_type %></td>
                </tr>
                <tr>
                  <th scope="row">Booking Date:</th>
                  <td><%= order.booking_date %></td>
                </tr>
                <tr>
                  <th scope="row">Deadline:</th>
                  <td><%= order.deadline %></td>
                </tr>
                <tr>
                  <th scope="row">Description:</th>
                  <td><%= order.description %></td>
                </tr>
                <tr>
                  <th scope="row">Amount:</th>
                  <td><%= order.price %></td>
                </tr>
                <tr>
                  <th scope="row">Advance Paid:</th>
                  <td><%= order.paid %></td>
                </tr>
                <tr>
                  <th scope="row">Pending Amount:</th>
                  <td><%= order.price - order.paid %></td>
                </tr>
              </tbody>
            </table>
          </div>
        </div>
      <% }); %>
    <% } else { %>
      <div class="alert alert-info" role="alert">
        No orders available.
      </div>
    <% } %>
  </div>
</main>
<%- include('partials/_footer'); %>
